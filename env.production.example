# Production Environment Variables Template
# Copy this file to .env.production and update with your values

# Database Configuration
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://podcastfy:${DB_PASSWORD}@postgres:5432/podcastfy

# Redis Configuration
REDIS_PASSWORD=secure_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Storage Configuration (MinIO/S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=secure_minio_password
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=podcastfy
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
# For AWS S3, comment out S3_ENDPOINT_URL and set:
# AWS_REGION=us-east-1
# S3_PUBLIC_URL_BASE=https://your-cloudfront-domain.com

# API Keys for AI Services
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Application API Keys
DEMO_API_KEY=pk_demo_secure_key_here
PROD_API_KEY=pk_prod_secure_key_here

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://app.yourdomain.com

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=production

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# Flower (Celery Monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=secure_flower_password

# Application Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Rate Limiting (optional overrides)
# RATE_LIMIT_PER_MINUTE=100
# DAILY_QUOTA=10000

# SSL/TLS (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Webhook Settings
# WEBHOOK_TIMEOUT=30
# WEBHOOK_RETRY_COUNT=3 